<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto posts__linkBox">
    <%= link_to '一覧', root_path, class: 'btn btn-outline-dark' %>
    <%= link_to '編集', edit_post_path(@post), class: 'btn btn-outline-dark' %>
  </div>
</div>

<% render 'shared/error_messages' %>

<div class = "card">
  <div class = "card-header">
    <h4><%= @post.title %></h4>
  </div>
  <div class = "card-body" %>
    <p class = "card-text"><%= simple_format(@post.content) %></p>
    <p class = "text-right font-weight-bold mr-10">ユーザーネーム</p>
  </div>
</div>
<%= link_to '削除', @post, class: 'btn btn-outline-dark',method: :delete %>